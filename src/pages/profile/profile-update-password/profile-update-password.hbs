<div class="profile">
  <h1 class="h1 profile__title">Update password</h1>
  <div class="profile__form-wrapper">
    <form class="profile__form" action="">
      <div class="profile__input">
        {{> input placeholder="Old password" type="password" name="oldPassword"}}
      </div>
      <div class="profile__input">
        {{> input placeholder="New password" type="password" name="newPassword"}}
      </div>
      <div class="profile__btn-wrapper">
        {{> button text="Save" type="button" id="profileInfoOpen" }}
      </div>
      <a id="profileInfoOpen">Cancel</a>
    </form>
  </div>
</div>
